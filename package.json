{
  "name": "homework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "node ./dist/src/server.js",
    "build": "npx tsc && npx tsc-alias",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/mocha": "10.0.10",
    "@types/node": "25.0.2",
    "jest": "30.2.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "mongodb": "6.0.0",
    "reflect-metadata": "0.2.2",
    "tsc-alias": "1.8.16",
    "typeorm": "0.3.28"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tmp/",
      "/dist"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "^@database/(.*)$": "<rootDir>/src/database/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1"
    }
  }
}
